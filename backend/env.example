# Database (Supabase PostgreSQL - Session Pooler)
# IMPORTANT: Use "Session pooler" connection string for IPv4 compatibility
# Get this from: Supabase Dashboard > Settings > Database > Connection Pooling
# Use port 6543 (Session Pooler) NOT port 5432 (Direct connection)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supabase (Authentication and File Storage)
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL="your_supabase_project_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET="your_jwt_secret_key"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS - Frontend URL (update for production: https://your-app.vercel.app)
FRONTEND_URL="http://localhost:3000"
