# ========================================
# VERCEL ENVIRONMENT VARIABLES
# ========================================
# DO NOT create a .env file locally!
# Set these in Vercel Dashboard:
# Project → Settings → Environment Variables
# ========================================

# Database Configuration
# Use port 5432 (direct connection) for Vercel production
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-make-it-long-and-random"

# Supabase Configuration (for file storage)
# Get from Supabase Dashboard → Settings → API
SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Node Environment
NODE_ENV="production"

# CORS Configuration
# Set to your frontend Vercel URL (exact match required)
ALLOWED_ORIGINS="https://your-frontend.vercel.app"